<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />


</head>
<body>




    <nav class=" col-md-4 offset-md-4 navbar navbar-expand-lg navbar-light bg-light">
        <div class=" container-fluid">
            <a class=" navbar-brand" href="#">BALABALA.com</a>
            <button class=" navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class=" mt-3 collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link " asp-action="Index">Ana Sehife</a>
                    </li>
                    @*<li class="nav-item">
                        <a class="btn btn-info" asp-action="Index" asp-controller="Admin">Admin sehife</a>
                    </li>*@ 
                    <li class="nav-item">
                        <a class="btn btn-info" asp-action="Editor" >Editor sehife</a>
                    </li>  
                    <li class="nav-item">
                        <a class="btn btn-info" asp-action="Manager" >Manager sehife</a>
                    </li>     
                </ul>
            </div>
        </div>

    </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                @RenderBody()

            </div>
            <div class="col-md-4">
                <h3 class="mt-2">Menu</h3>
                <a class="btn btn-info w-75" asp-action="PasswordChange" asp-controller="Member">Parol deyisdirme</a>
                <br />
                <a class="btn btn-info w-75 mt-4" asp-action="UserEdit" asp-controller="Member">Melumatlari deyis</a>
                <br />
                <a class="btn btn-info w-75 mt-4" asp-action="LogOut" asp-controller="Member"  asp-route-returnUrl="/Home/Index" 
                   >Cixis</a>
            </div>
        </div>
    </div>
</body>
</html>

@model List<AppUser>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h3>Istifadeciler</h3>
<hr />
<table class="table table-bordered table-striped ">
    <tr class="text-center">
        <td>User Id</td>
        <td>UserName</td>
        <td>Email</td>
        <td>Rollar</td>
        <td>Rol Verme</td>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td class="text-center" colspan="3">Hec Bir User Yoxdur</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td user-roles="@item.Id"></td>
                <td><a class="btn btn-success" asp-action="RoleAssign" asp-route-id="@item.Id">Rol ver</a></td>
            </tr>
        }

    }


</table>

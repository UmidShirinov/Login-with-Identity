@model UDemyAuth.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPasswordConfirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Parolu Sifirlama</h1>

<hr />

@if (ViewBag.success=="success")
{
    <div class="alert alert-info" > Parolunuz ugurla deyisdirildi.</div>

    <a class="btn btn-link" asp-action="Login" asp-controller="Home">Giris sehifesi Ucun basin</a>
}
else {

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-action="ResetPasswordConfirm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PasswordNew" class="control-label"></label>
                <input asp-for="PasswordNew" class="form-control" />
                <span asp-validation-for="PasswordNew" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Tekrar Parol</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Parolu Yenile" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
}

